{{!< layout}}
<div style="position:relative;align-content:center;vertical-align:central;text-align:center;padding-top:15%;padding-bottom:20%;">
    <h1 style="font-size:4vw;">Thank you for contacting Maverick!</h1>
    <div id="alerttext" style="display:inline-flex;text-align:center;align-content:center;">Redirecting to home page in&nbsp<div id="countdown">5</div>&nbspseconds.</div>
    <div id="redirlink">Click <a href="/">here</a> if not automatically redirected!</div>
</div>

<script>
    $(document).ready(function () {
        $('#redirlink').hide();
        decCount();
    });

    function decCount(){
    var time = 5;
        setInterval(function () {
            if(time > 0){
            time--;
            $('#countdown').text(time);
            if(time < 1){
                $('#alerttext').hide();
                $('#redirlink').show();
                window.location.replace("http://www.mavericksoftware.com");
            }
        }
        }, 1000);
    }
</script>
